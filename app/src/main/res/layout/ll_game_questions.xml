android:id="@+id/ll_game_questions"
android:layout_width="match_parent"
android:layout_height="match_parent"

    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/box"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="250dp"
    android:layout_marginRight="250dp"
    android:layout_marginBottom="100dp"
    android:gravity="center_horizontal"
    >
    <TextView
        android:id="@+id/item_questions"
        android:layout_width="match_parent"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30sp"
        android:text="到另一个房间去，用手机给自己身体的性感部位拍张照片，（不要拍脸部）。然后发送到伴侣的手机吧。"
        />


    <Button
        android:id="@+id/bt_look_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@mipmap/kandaan"
        android:shadowColor="@color/ff1f1f1f"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:layout_marginLeft="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="150dp"
        />

    <TextView
        android:id="@+id/item_questions_num"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="30sp"
        android:text="第 1 题"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

