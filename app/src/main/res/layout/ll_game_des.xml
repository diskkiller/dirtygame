<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_game_des"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/game_des"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/box"
    android:orientation="vertical"
    android:visibility="gone"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:text="官人~确认收到彩票才能开始游戏呦~\n彩票由商家配送！"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/bt_star"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@mipmap/game_des"
        android:textColor="#ffffff"
        android:layout_marginTop="300dp"
        android:textSize="20sp"
        android:padding="20dp"
        android:shadowColor="@color/ff1f1f1f"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        />

</LinearLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="450dp"
        android:layout_height="500dp"
        android:background="@mipmap/plmm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView3" />

    <ImageView
        android:id="@+id/iv_caideng4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</RelativeLayout>