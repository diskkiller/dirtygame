<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ll_game_des"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:layout_marginLeft="250dp"
android:layout_marginRight="250dp"
android:layout_marginTop="150dp"
android:layout_marginBottom="150dp"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/dialog_bg"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:text="官人~确认收到彩票才能开始游戏呦~\n彩票由商家配送！"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/bt_star"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@mipmap/btn_nomal"
        android:textColor="#ffffff"
        android:layout_marginTop="300dp"
        android:textSize="20sp"
        android:padding="20dp"
        android:shadowColor="@color/ff1f1f1f"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="已收到！！！"
        />

</LinearLayout>

<ImageView
    android:layout_width="450dp"
    android:layout_height="500dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:background="@mipmap/plmm"
    />
</RelativeLayout>