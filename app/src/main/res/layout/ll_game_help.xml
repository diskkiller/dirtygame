<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ll_game_help"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/im_progress_dialog_bg"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="250dp"
    android:layout_marginRight="250dp"
    android:layout_marginTop="150dp"
    android:layout_marginBottom="150dp"
    android:background="@mipmap/dialog_bg"
    android:orientation="vertical"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:text="游戏说明"
        android:background="@mipmap/title_bg"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="10dp"
        android:text="1、3个级别（亿万/千万/百万）15个主题（题目难度：亿>千>百）；\n2、一共10个题目；\n3、两人一组，男女最佳； \n4、以小组为单位轮流答题；5、回答正确可刮彩票一张，错误执行游戏随机的惩罚一条；\n注：亿万-6张、千万-4张、百万-2张；刮刮卡由商家配送；"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:text="彩票多多，奖励多多哦~~~"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="30dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="700dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:text="即开彩最高可中"
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="65sp"
            android:textColor="#ffffff"
            android:text="   50万  "
            android:layout_marginTop="50dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#ffffff"
            android:text="   元！！！"
            android:layout_marginTop="50dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:text="刮刮彩中奖了！！"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:text="记得用和彩宝微信公众号兑奖哦！"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="15dp"
        />

</LinearLayout>


    <Button
        android:id="@+id/bt_gogogo"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@mipmap/btn_nomal"
        android:textColor="#ffffff"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:padding="20dp"
        android:shadowColor="@color/ff1f1f1f"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="立即开始"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="300dp"
        android:layout_marginBottom="200dp"
        />

<ImageView
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_marginBottom="200dp"
    android:layout_marginLeft="300dp"
    android:background="@mipmap/erweima"
    />
</RelativeLayout>