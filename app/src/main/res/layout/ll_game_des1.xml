<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/ll_game_des1"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:background="@mipmap/dengbujile_bg"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/box"
    android:orientation="vertical"
    android:visibility="gone"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="10dp"
        android:gravity="center"
        android:text="有缘千里来相会，不是哥哥就是妹！妹爱哥，哥爱妹，一起举杯配个对！\n
现场所有男女穿插而坐，男女一组，找到自己配对的人。\n
发放彩票，但是不能刮开呦~~"
        android:layout_marginTop="150dp"
        android:layout_gravity="center"
        />
    <Button
        android:id="@+id/bt_star1"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@mipmap/dengbuji"
        android:textColor="#ffffff"
        android:layout_marginTop="300dp"
        android:textSize="20sp"
        android:padding="20dp"
        android:shadowColor="@color/ff1f1f1f"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        />

</LinearLayout>

    <ImageView
        android:visibility="gone"
        android:layout_width="450dp"
        android:layout_height="500dp"
        android:background="@mipmap/plmm"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="18dp"
        android:id="@+id/imageView4" />

    <ImageView
        android:id="@+id/iv_caideng5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</RelativeLayout>